# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_anon_key_here

# Database Configuration (optional for direct SQL access)
DATABASE_URL=postgresql://user:password@host:port/database

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Application Settings
ENVIRONMENT=development
DEBUG=true
CACHE_DIR=.cache
CACHE_ENABLED=true

# API Configuration
API_PREFIX=/api
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Email Service Configuration (SendGrid recommended for production)
# For Gmail SMTP (development only - may be blocked by hosting providers)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
BOT_EMAIL=your_email@gmail.com
BOT_PASSWORD=your_app_password_here

# For SendGrid (recommended for production)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@yourdomain.com

# Production CORS (set in Railway)
# CORS_ORIGINS=https://your-app.vercel.app,https://www.your-app.vercel.app
