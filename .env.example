# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database Configuration (optional for direct SQL access)
DATABASE_URL=postgresql://user:password@host:port/database
SUPABASE_DB_PASSWORD=your_db_password_here

# Backend API URL
BACKEND_URL=http://localhost:8000
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
NEXT_PUBLIC_GOOGLE_OAUTH_CLIENT_ID=your_google_client_id_here

# SendGrid Email Service
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=your_sender_email_here

# Anthropic API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Teacher Info (Optional - for filtering)
NEXT_PUBLIC_TEACHER_EMAIL=teacher@example.com
NEXT_PUBLIC_TEACHER_NAME=Teacher Name

# Production Environment Variables (set these in Vercel/Railway)
# NEXT_PUBLIC_BACKEND_URL=https://your-backend.railway.app
# NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# Environment Mode (production or development)
# Set to "production" in Vercel/Railway, "development" locally
NEXT_PUBLIC_ENV_MODE=development
